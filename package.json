{
  "name": "vincent-orback",
  "version": "5.0.0",
  "description": "My personal portfolio",
  "homepage": "https://vincentorback.se",
  "author": {
    "name": "Vincent Orback",
    "email": "vorback@gmail.com",
    "url": "https://vincentorback.se"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentorback/vincent-orback.git"
  },
  "scripts": {
    "start": "if [ ! -d build ]; then npm run build:deploy; fi && npm-run-all --parallel serve watch",
    "build:js": "if [ ! -d build/assets/javascript ]; then mkdir -p build/assets/javascript; fi && uglifyjs $npm_package_config_js_files -o build/assets/javascript/main.js --screw-ie8 --comments",
    "build:css": "postcss src/assets/css/style.css -o build/assets/css/style.css && purgecss --css build/assets/css/style.css --content build/*.html -o build/assets/css",
    "build:html": "html-minifier --remove-comments --sort-attributes --sort-class-name --collapse-whitespace --remove-redundant-attributes --process-scripts 'application/ld+json' --minify-js true --output-dir build --input-dir src --file-ext html",
    "build:icons": "npm run move:icons && imageoptim ./build/assets/icons/*",
    "build:images": "npm run move:images && npm run build:images:webp && npm run build:images:other",
    "build:images:webp": "imagemin ./build/assets/images/{*.jpg,*.png} -p=webp -o=./build/assets/images",
    "build:images:other": "imageoptim ./build/assets/images/*",
    "build:deploy:light": "npm run build:html && npm run test:js && npm run test:css && npm run build:js && npm run build:css && npm run compress:js && npm run compress:css && npm run compress:html",
    "move:images": "copyfiles -u 2 -f src/assets/images/* src/assets/images/**/* build/assets/images",
    "move:icons": "copyfiles -u 2 -f src/assets/icons/* build/assets/icons",
    "move:audio": "copyfiles -u 2 src/assets/audio/* build/assets",
    "build:deploy": "npm run build:deploy:light && npm run build:images && npm run build:icons && npm run move:audio && npm run move:fonts",
    "move:fonts": "copyfiles -u 2 src/assets/fonts/* dist/assets",
    "test:js": "standard 'src/assets/javascript/**/*.js'",
    "test:css": "stylelint 'src/assets/css/**/*.css'",
    "watch": "npm-run-all --parallel watch:js watch:css watch:html",
    "watch:js": "eye --*glob=src/assets/javascript/**/*.js npm run test:js and npm run build:js and npm run compress:js",
    "watch:css": "eye --*glob=src/assets/css/**/*.css npm run test:css and npm run build:css and npm run compress:css",
    "watch:html": "eye --*glob=src/**/*.html npm run build:html and npm run compress:html",
    "serve": "ws -d build -r '/about-me/ -> /about-me.html' -p $npm_package_config_port",
    "compress:js": "brotli -f build/assets/javascript/main.js",
    "compress:css": "brotli -f build/assets/css/style.css",
    "compress:html": "brotli -f build/*.html"
  },
  "config": {
    "port": "3000",
    "js_files": "src/assets/javascript/vendor/blazy.js src/assets/javascript/main.js"
  },
  "devDependencies": {
    "autoprefixer": "^8.5.1",
    "copyfiles": "^2.0.0",
    "eye": "^0.0.3",
    "html-minifier": "^3.5.16",
    "imagemin-cli": "^3.0.0",
    "imagemin-webp": "^4.1.0",
    "imageoptim-cli": "^2.0.2",
    "local-web-server": "^2.5.2",
    "npm-run-all": "^4.1.3",
    "postcss-calc": "^6.0.1",
    "postcss-cli": "^5.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^7.0.0",
    "postcss-csso": "^3.0.0",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-import": "^11.1.0",
    "purgecss": "^1.0.0",
    "standard": "^11.0.1",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "uglify-js": "^3.3.28"
  },
  "browserslist": [
    "> 5% in SE"
  ],
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-custom-media": {},
      "autoprefixer": {
        "grid": true
      },
      "postcss-calc": {
        "warnWhenCannotResolve": true,
        "preserve": false
      },
      "postcss-flexbugs-fixes": {},
      "postcss-csso": {}
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "max-empty-lines": 2,
      "number-leading-zero": "never"
    }
  },
  "standard": {
    "ignore": [
      "src/assets/javascript/vendor/"
    ]
  }
}
